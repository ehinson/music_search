 <div class="site-wrapper">

      <div class="site-wrapper-inner skin-1">

        <div class="cover-container container">

          <div class="content">
            <div class="inner cover grid cloud">
              <h3 class= "lead"><span class="pull-left">Listing: <%= params['search']['artist'] %> </span><span class="pull-right"><%= add_results  %> results<span> 
              </h3>
            </div><!--inner-->
            <div id="tabs" class="tabs">
              <nav>
                <ul class="nav nav-tabs">
                  
                  <li class='active'><%= link_to '#', :class=> 'text-uppercase breathe', :id => 'artist-tab', :onclick => 'showTab(this.id); return false;' do %>
                    Artists
                    (<%= @artists.count  %>)
                  <%  end  %>
                  </li>
                  <li ><%= link_to '#', :id => 'song-tab', :class=> 'text-uppercase breathe', :onclick => 'showTab(this.id); return false;' do %>
                    Songs
                    (<%= @tracks.count  %>)
                  <%  end  %>
                  </li>
                  <li><%= link_to '#', :id => 'album-tab', :class=> 'text-uppercase breathe',:onclick => 'showTab(this.id); return false;' do %>
                    Albums
                    (<%= @albums.count  %>)
                  <%  end  %>
                  </li>
                  <li><%= link_to '#', :id => 'genres-tab', :class=> 'text-uppercase breathe',:onclick => 'showTab(this.id); return false;' do %>
                    Genres
                    <% @artists.each do  |artist| %>
                    (<%= artist.genres.count %>)
                <%  end  %>
                  <%  end  %>
                  </li>
                  <li><a href="#section-5" class="icon-5 text-uppercase breathe"><span>Playlists</span></a></li>
                </ul>
              </nav>

            </div><!--tabs-->

            <section id= "artist-tab" class="artist-tab">
              <div class= "artist">
                <% @artists.each do  |artist| %>
                <div class="result one-fifth">
                  <div class="feature-image">
                    <img src="http://placehold.it/150x150">
                  </div><!--feature-image-->
                  <div class="info">
                    <strong><%= artist.name  %></strong><br>
                    (<%= artist.songs.size  %>) songs<br>
                    <%  artist.songs.each do |song| %>
                      <%= song  %><br>
                    <%  end  %>
                  </div><!--info-->
                  <div class="info2">
                      <div class="one-third left"> (<%= @albums.count  %>) albums</div><!--left-->
                      <div class="one-third middle"> (<%= @tracks.count  %>) songs</div><!--middle-->
                      <div class="one-third right"> <strong>Text</strong><br>Text</div><!--right-->
                  </div><!--info2-->
                </div><!--result-->
                  <%  end  %>

              </div><!--artist-->
            </section>

            <section id= "song-tab" class="hide">
              <div class= "song">
                <% @tracks.map(&:name).each do |track| %>
                  <%= track %><br>
                <%  end  %>

              </div><!--song-->
            </section>

            <section id= "album-tab" class="hide">
              <div class= "album">
                <%  @albums.map(&:name).each do |album|  %>
                  <%= album  %> <br>
                  <%  end  %>
              </div><!--album-->
            </section>

            <section id= "genres-tab" class="hide">
              <div class= "genres">
                <% @artists.each do  |artist| %>
                  <% artist.genres.each do |g| %>
                    <p><%=  g  %></p>
                    <%  end  %>
                <%  end  %>
              </div><!--genres-->
            </section>
